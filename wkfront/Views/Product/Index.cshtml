@{
    ViewData["Title"] = "Produtos";
}

<div class="text-center">
    <h1 class="display- mb-3">Produtos</h1>

    <a type="button" class="btn btn-primary btn-block" asp-controller="Product" asp-action="New">Novo produto</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Categoria</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in ViewBag.products)
            {
                <tr>
                    <td>@product.title</td>
                    <td>@product.category.title</td>
                    <td>
                        <a type="button" class="btn btn-info" asp-controller="Product" asp-action="Edit" asp-route-id="@product.id">Editar</a>
                        <a type="button" class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
