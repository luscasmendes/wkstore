@{
    ViewData["Title"] = "Categorias";
}

<div class="text-center">
    <h1 class="display- mb-3">Categorias</h1>

    <a type="button" class="btn btn-primary btn-block" asp-controller="Category" asp-action="New">Nova Categoria</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in ViewBag.categories)
            {
                <tr>
                    <td>@category.title</td>
                    <td>
                        <a type="button" class="btn btn-info" asp-controller="Category" asp-action="Edit" asp-route-id="@category.id">Editar</a>
                        <a type="button" class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
